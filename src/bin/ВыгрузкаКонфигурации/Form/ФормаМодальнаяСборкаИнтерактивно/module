
Процедура КнопкаВыполнитьНажатие(Кнопка)
	// Вставить содержимое обработчика.
	ЭтаФорма.Закрыть(Истина);
КонецПроцедуры

Процедура ПриОткрытии()
	
	Если ЭтаФорма.МодальныйРежим = Истина Тогда
		ПодключитьОбработчикОжидания("ЗакрытьПоТаймеру", 250, Истина);
	КонецЕсли;
	
КонецПроцедуры

Процедура ЗакрытьПоТаймеру()
	
	ЭтаФорма.Закрыть(Истина);
	
КонецПроцедуры
